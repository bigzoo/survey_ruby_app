<div class="bounceInLeft animated" data-animation="bounce">
  <div id="name_header" class="card-panel green lighten-2">
    <h1 id="name" class="white-text center">Welcome to Survey Monkey</h1>
  </div>
</div>
<div class="fadeIn animated">
  <div id="name_header" class="card-panel green lighten-2">
    <a class="btn-floating btn-large waves-effect waves-light green lighten-2 center z-depth-3" data-target="modal1">
      <i class="material-icons">add</i>
    </a>
    <h4 id="name" class="white-text center">Here is a list of surveys</h1>
    <div class="collection green-text">
      <% @surveys.each do |survey| %>
      <a href="/surveys/<%= survey.id%>" class="collection-item"><%= survey.name%></a>
      <% end %>
    </div>
  </div>
</div>

<div id="modal1" class="modal">
  <div class="modal-content green-text">
    <h4 class="center">New Survey</h4>
    <form action="/surveys" method="post">
      <div>
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate">
          <label for="name">Survey Name</label>
        </div>
      </div>
      <div>
        <div class="input-field">
          <input name="target_audience" id="target_audience" type="text" class="validate">
          <label for="target_audience">Target Audience of the survey</label>
        </div>
      </div>
      <button type="submit" class="modal-action modal-close waves-effect waves-green btn-flat">Add Survey</button>
    </form>
  </div>
</div>

</div>
